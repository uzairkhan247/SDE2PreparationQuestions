class Solution {
    public int pivotIndex(int[] nums) {
     
        if(nums.length==1)
            return 0;
        int rightsum = 0;
       
        for(int i=0;i<nums.length;i++){
            rightsum+=nums[i];
        }
        
        int leftsum=0;
         for(int i=0;i<nums.length;i++){
             if(rightsum-nums[i]==leftsum)
                 return i;
             leftsum+=nums[i];
             rightsum-=nums[i];
         }
        
         return -1;
    }
}
