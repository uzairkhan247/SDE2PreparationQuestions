class Solution {
    public boolean wordPattern(String pattern, String s) {
        
        String[] str = s.split(" ");
        if(pattern.length()!=str.length)
            return false;
        
        Map<Character,String> hashmap = new HashMap<>();
        for(int i=0;i<pattern.length();i++){
            String word = str[i];
            Character pchar = pattern.charAt(i);
            if(hashmap.containsKey(pchar)){
                if(!hashmap.get(pchar).equals(word))
                    return false;
            }else{
                if(hashmap.values().contains(word))
                    return false;
                hashmap.put(pchar,word);
            }
        }
        return true;
    }
}
