class Solution {
    public int maxResult(int[] nums, int k) {
        
        if(nums.length==1)
            return nums[0];
        Queue<int[]> pq = new PriorityQueue<>((a,b)->(b[0]-a[0]));
        pq.add(new int[]{nums[0],0});
        int max=nums[0];
        for(int i=1;i<nums.length;i++){
            while(i-pq.peek()[1]>k)
                pq.poll();
            max = pq.peek()[0]+nums[i];
            pq.add(new int[]{max,i});
        }
        return max;
        
    }
}
